<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/combined_chart_data_display"
            android:layout_width="0dp"
            android:layout_height="450dp"
            android:layout_marginTop="@dimen/default_layout_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart_data_display"
            android:layout_width="0dp"
            android:layout_height="450dp"
            android:layout_marginTop="@dimen/default_layout_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/combined_chart_data_display" />


        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart_data_display"
            android:layout_width="0dp"
            android:layout_height="450dp"
            android:layout_marginTop="@dimen/default_layout_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bar_chart_data_display" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
